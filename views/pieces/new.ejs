<h2 class="text-center text-primary">Add a New Piece</h2>

<form action="/pieces" method="POST">
	<h4>Piece:</h4>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Name</span>
	  </div>
	  <input type="text" name="name" class="form-control" placeholder="" aria-label="name" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Image</span>
	  </div>
	  <input type="text" name="image" class="form-control" placeholder="" aria-label="image" aria-describedby="basic-addon1">
	</div>
	<h4>Creator:</h4>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">First name:</span>
	  </div>
	  <input type="text" name="firstname" class="form-control" placeholder="" aria-label="firstname" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Last name:</span>
	  </div>
	  <input type="text" name="lastname" class="form-control" placeholder="" aria-label="lastname" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Image:</span>
	  </div>
	  <input type="text" name="image2" class="form-control" placeholder="" aria-label="image2" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Birth year:</span>
	  </div>
	  <input type="text" name="birthyear" class="form-control" placeholder="" aria-label="birthyear" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Death year:</span>
	  </div>
	  <input type="text" name="deathyear" class="form-control" placeholder="" aria-label="deathyear" aria-describedby="basic-addon1">
	</div>
	<div class="form-group">
		<h4>Museum:</h4>
		<select class="form-control" name="museum" id="museum">
		    	<option>Select Museum:</option>
		    <!-- loop through museums here -->
		    	
		    <% museum.forEach((m)=>{%>
	    		<option value="<%= m.id %>"><%= m.name %></option>
	   		<%})%>
		</select>
	</div>

	    <input type="submit" name="submit" value="ADD" />
	
</form>