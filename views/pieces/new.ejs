<h2 class="text-center text-primary">Add a New Piece</h2>

<!-- TODO: Add a form for making a new piece. Should post to /pieces -->
<form method="POST" action="/pieces">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input type="text" name="image" class="form-control">
    </div>
    <div class="form-group">
        <label for="firstname">Creator</label>
        <input type="text" name="firstname" class="form-control" placeholder="First Name">
        <input type="text" name="lastname" class="form-control" placeholder="Last Name">
    </div>
    <div class="form-group">
        <label for="name">Lived</label>
        <input type="text" name="birthyear" class="form-control" placeholder="Birth Year">
        <input type="text" name="deathyear" class="form-control" placeholder="Death Year">
    </div>
    <div class="form-group">
        <label for="creatorimage">Creator Image</label>
        <input type="text" name="creatorimage" class="form-control">
    </div>
    <div class="form-group">
        <label for="museum">Museum</label>
        <select class="form-control" name="museum">
        <% museums.forEach(museum => { %>
            <option value="<%=museum.id%>"><%=museum.name%></option>
        <% }); %> 
        </select>
    </div>
    <input class="btn btn-primary" type="submit">
</form>
