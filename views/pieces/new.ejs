<div class="container">
    <h2 class="text-center text-primary">Add a New Piece</h2>
    <form method="POST" action="/pieces">
        <div class="form-group">
            <label for="name">Piece Name</label>
            <input type="text" class="form-control" name="name"
                placeholder="Enter the name of the piece being registered.">
        </div>
        <div class="form-group">
            <label for="image">Image of Piece </label>
            <input type="text" class="form-control" name="image"
                placeholder="Enter the image URL of the piece being registered.">
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <label for="originCountry">Origin Country</label>
                    <input type="text" class="form-control" name="originCountry" placeholder="Origin Country">
                </div>
                <div class="col">
                    <label for="Museum">Museum</label>
                    <div class="input-group mb-3">
                        <select class="custom-select" id="inputGroupSelect01" name="museum">
                            <option selected>Choose...</option>
                            <% museums.forEach(m => { %>
                            <option value=<%=m._id%>><%=m.name%></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <label for="creatorfn">First Name</label>
                    <input type="text" class="form-control" name="firstname" placeholder="Creator First Name">
                </div>
                <div class="col">
                    <label for="creatorln">Last Name</label>
                    <input type="text" class="form-control" name="lastname" placeholder="Creator Last Name">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <label for="creatorby">Birth Year</label>
                    <input type="number" class="form-control" name="birthyear" placeholder="When was the creator born">
                </div>
                <div class="col">
                    <label for="creatordy">Death Year</label>
                    <input type="number" class="form-control" name="deathyear" placeholder="When did the creator pass">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="img">Image of creator </label>
            <input type="text" class="form-control" name="CreatorImage"
                placeholder="Enter the image URL of the creator being registered.">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>