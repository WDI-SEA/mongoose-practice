<h2 class="text-center text-primary">Add a New Piece</h2>

<!-- TODO: Add a form for making a new piece. Should post to /pieces -->
<form class="museum" action="/pieces" method="POST">
	<div class="form-group">
		<input id="name" type="text" name="name" class="form-control" placeholder=" Name">
		<label for="name"></label>
	</div>
	<div class="form-group">
		<input id="image" type="text" name="image" class="form-control" placeholder="Image">
		<label for="image"></label>
	</div>

	<div class="form-group">
		<input id="museum" type="text" name="museum" class="form-control" placeholder="Museum">
		<label for="museum"></label>
	</div>
	<div class="form-group">
		<input id="country" type="text" name="country" class="form-control" placeholder="Country">
		<label for="country"></label>
	</div>

	<p>Artist</p>
	<div class="form-group">
		<input id="firstname" type="text" name="firstname" class="form-control" placeholder="First Name">
		<label for="firstname"></label>
	</div>
	<div class="form-group">
		<input id="lastname" type="text" name="lastname" class="form-control" placeholder="Last Name">
		<label for="lastname"></label>
	</div>
	<div class="form-group">
		<input id="artist_image" type="text" name="artist_image" class="form-control" placeholder="artist image">
		<label for="artist_image"> </label>
	</div>
	<div class="form-group">
		<input id="birth" type="text" name="birth" class="form-control" placeholder="Birth Year">
		<label for="birth"></label>
	</div>
	<div class="form-group">
		<input id="death" type="text" name="death" class="form-control" placeholder="Death Year">
		<label for="death"></label>
	</div>
	  <button href="/pieces" type="submit" class="btn btn-primary">Submit</button>

</form>




