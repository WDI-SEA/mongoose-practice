<h2 class="text-center text-primary">Add a New Piece</h2>

<form action="/pieces" method="POST">

	<div class="form-group"> <!-- Full Name -->
		<label for="piece_name_id" class="control-label">Piece Name</label>
		<input type="text" class="form-control" id="piece_name_id" name="name" placeholder="ex. Mona Lisa">
	</div>	

	<div class="form-group"> <!-- City-->
		<label for="creator_image_id" class="control-label">Image Url of Piece</label>
		<input type="text" class="form-control" id="creator_image_id" name="image" placeholder="ex. www.mothaf-ingmonalisa.com">
	</div>	

							
	<div class="form-group"> <!-- State Button -->
		<label for="museum_id" class="control-label">Piece can be found at: </label>
		<select class="form-control" id="museum_id" name="museum">
			<% buildings.forEach(function(museum){%>
				<option value="<%= museum.id %>"><%= museum.name %></option>
			<%})%>
		</select>					
	</div>
	<fieldset class="custom-fieldset">
		<legend class="custom-legend">Creator</legend>
		<div class="form-group"> <!-- Street 1 -->
			<label for="creator_name_id" class="control-label">Creator's First Name</label>
			<input type="text" class="form-control" id="creator_name_id" name="firstname" placeholder="Ex. Leonardo">
		</div>					
								
		<div class="form-group"> <!-- Street 2 -->
			<label for="creator_last_id" class="control-label">Creator's Last Name</label>
			<input type="text" class="form-control" id="creator_last_id" name="lastname" placeholder="Da Vinci">
		</div>	

		<div class="form-group"> <!-- City-->
			<label for="creator_image_id" class="control-label">Image Url of Creator</label>
			<input type="text" class="form-control" id="creator_image_id" name="creator_image" placeholder="ex. www.sweetsweetdavincipics.com/davincimotorcycleflop">
		</div>	

		<div class="form-group"> <!-- Zip Code-->
			<label for="birth_year_id" class="control-label">Creator's Birth Year</label>
			<input type="text" class="form-control" id="birth_year_id" name="birthyear" placeholder="ex. 1452">
		</div>	

		<div class="form-group"> <!-- Zip Code-->
			<label for="death_year_id" class="control-label">Creator's Death Year</label>
			<input type="text" class="form-control" id="death_year_id" name="deathyear" placeholder="ex. 1519">
		</div>							
	</fieldset>		
	
	<div class="form-group"> <!-- Submit Button -->
		<button type="submit" class="btn btn-primary">Log!</button>
	</div>     
	
</form>		
