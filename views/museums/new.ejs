<h2 class="text-center text-primary">Register a New Museum</h2>

<!-- TODO: Add a form for making a new museum. Should post to /museums -->
<form action="/museums" method="POST">
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Name</span>
	  </div>
	  <input type="text" name="name" class="form-control" placeholder="" aria-label="name" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">City</span>
	  </div>
	  <input type="text" name="city" class="form-control" placeholder="" aria-label="city" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Country</span>
	  </div>
	  <input type="text" name="country" class="form-control" placeholder="" aria-label="country" aria-describedby="basic-addon1">
	</div>
	<div class="input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text" id="basic-addon1">Image</span>
	  </div>
	  <input type="text" name="image" class="form-control" placeholder="" aria-label="image" aria-describedby="basic-addon1">
	</div>
	<div>
		<input type="submit" name="submit" value="ADD" />
	</div>
</form>