<form method="POST" action="/museums">
    <div class = "form-group">
        <label for="name">
            Museum Name: 
        </label>
        <input type="text" name="name">
    </div>
    <div class = "form-group">
        <label for="city">
            City: 
        </label>
        <input type="text" name="city">
    </div>
    <div class = "form-group">
        <label for="country">
            Country: 
        </label>
        <input type="text" name="country">
    </div>
    <div class = "form-group">
        <label for="image">
            Add Image: 
        </label>
        <input type="text" name="image">
    </div>
    <input type="submit" value="add">
</form>