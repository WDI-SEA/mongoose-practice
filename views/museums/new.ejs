

<!-- TODO: Add a form for making a new museum. Should post to /museums -->
<div class="container">
	<div class = "row">

		<form class = "col s12" method="POST" action="/museums">
			<h2 class="text-center text-primary">Register a New Museum</h2>

			<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" id="name" name="name" placeholder="name of museum" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="name">Image URL:</label>
				<input type="text" id="image" name="image" placeholder="link to pic of museum" class="form-control">
			</div>


			<div class="form-group">
				<label for="name">City:</label>
				<input type="text" id="city" name="city" placeholder="location (city)" class="form-control">
			</div>

			<div class="form-group">
				<label for="name">Country:</label>
				<input type="text" id="country" name="country" placeholder="location (country)" class="form-control">
			</div>
			
			<br>
			<input type="submit" value="Register Museum" class="btn btn-primary">

		</form>
		
	</div>
</div>