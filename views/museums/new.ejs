<div class="container">
    <h2 class="text-center text-primary">Register a New Museum</h2>
<!-- TODO: Add a form for making a new museum. Should post to /museums -->
<form method="POST" action="/museums">
    <div class="form-group">
        <label for="name">Museum Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter the name of the museum being registered.">
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col">
                <label for="city">City</label>
                <input type="text" class="form-control" name="city" placeholder="City">
            </div>
            <div class="col">
                <label for="country">Country</label>
                <input type="text" class="form-control" name="country" placeholder="Country">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="img">Image </label>
        <input type="text" class="form-control" name="image"
            placeholder="Enter the image URL of the museum being registered.">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
</div>